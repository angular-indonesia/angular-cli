{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "baseUrl": ".",
    "noImplicitAny": false,
    "sourceMap": true,
    "mapRoot": "",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "outDir": "lib",
    "skipLibCheck": true,
    "rootDir": ".",
    "paths": {
      "foo/*": [
        "./foo/*",
        "*"
      ]
    }
  },
  "angularCompilerOptions": {
    "genDir": "app/generated/",
    "entryModule": "app/app.module#AppModule"
  }
}
